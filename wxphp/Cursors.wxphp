<?php

class MainFrame extends wxFrame
{ 
  function onQuit()
  {
    $this->Destroy();
  }


  function __construct()
  {
     // Parent Window ?  /  This Window Id? / Title / Window Position / Window Size
     parent::__construct(null, -1, "Box  Sizer Panels wxPHP App", new wxPoint(400, 120), new wxSize(400, 320));

     $vbox  = new wxBoxSizer(wxVERTICAL);
     $sizer = new wxGridSizer(3, 3, 2, 2);

     $cursors = array(wxCURSOR_ARROW,          wxCURSOR_HAND,       wxCURSOR_WATCH,
                      wxCURSOR_SPRAYCAN,       wxCURSOR_PENCIL,     wxCURSOR_CROSS,
                      wxCURSOR_QUESTION_ARROW, wxCURSOR_POINT_LEFT, wxCURSOR_SIZING);

     $point=new wxPoint(60, 20);
     $size=new   wxSize(60, 20);
     $sizer->Add( new wxPanel($this, -1, $point, $size, wxSUNKEN_BORDER), 1, $flag=wxEXPAND);
     $sizer->Add( new wxPanel($this, -1, $point, $size, wxSUNKEN_BORDER), 2, $flag=wxEXPAND);
     $sizer->Add( new wxPanel($this, -1, $point, $size, wxSUNKEN_BORDER), 1, $flag=wxEXPAND);
     $sizer->Add( new wxPanel($this, -1, $point, $size, wxSUNKEN_BORDER), 1, $flag=wxEXPAND);
     $sizer->Add( new wxPanel($this, -1, $point, $size, wxSUNKEN_BORDER), 1, $flag=wxEXPAND);
     $sizer->Add( new wxPanel($this, -1, $point, $size, wxSUNKEN_BORDER), 1, $flag=wxEXPAND);
     $sizer->Add( new wxPanel($this, -1, $point, $size, wxSUNKEN_BORDER), 1, $flag=wxEXPAND);
     $sizer->Add( new wxPanel($this, -1, $point, $size, wxSUNKEN_BORDER), 1, $flag=wxEXPAND);
     $sizer->Add( new wxPanel($this, -1, $point, $size, wxSUNKEN_BORDER), 1, $flag=wxEXPAND);

     $vbox->Add($sizer, 1, wxEXPAND | wxTOP, 5);
     $this->SetSizer($vbox);

/* Does wxPHP have stock cursors
        for i in cursors:
            panel = wx.Panel(self, -1, style=wx.SUNKEN_BORDER)
            panel.SetCursor(wx.StockCursor(i))
            sizer.Add(panel, flag=wx.EXPAND)
*/

  }
}

class MyApp extends wxApp 
{
  function OnInit()
  {
    $this->mf = new mainFrame();
    $this->mf->Show();
    return 0;
  }

  function OnExit()
  {
    return 0;
  }
}

$app = new MyApp();
wxApp::SetInstance($app);

wxEntry();  

?>



